<Window x:Class="BankApp.DepositWithdrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Операция со счетом" Height="150" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Введите сумму:"/>
            <TextBox x:Name="AmountTextBox" Margin="0 5" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                <Button Content="Готово" Width="100" Margin="0 5" Click="DoneButton_Click"/>
                <Button Content="Отмена" Width="100" Margin="0 5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
