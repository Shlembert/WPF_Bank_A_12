<Window x:Class="BankApp.NewClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый клиент" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Имя клиента:"/>
            <TextBox x:Name="ClientNameTextBox"/>
            <Button Content="Добавить" Click="AddClientButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
