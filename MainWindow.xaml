<Window x:Class="BankApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Банковская система" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Имя клиента:" />
            <TextBox x:Name="ClientNameTextBox" Width="200" />
            <Button Content="Добавить клиента" Click="AddClient_Click" Width="200" Margin="0,10,0,0"/>

            <Button Content="Просмотреть информацию о клиенте" Click="ViewClientDetails_Click" Width="200" Margin="0,10,0,0"/>

            <ListBox x:Name="ClientsListBox" Width="400" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
